def fibonacci(n):
    a, b = 0, 1
    while b < n:
        a, b = b, a+b
    if b == n:
        print(n, "pertence à sequência de Fibonacci")
    else:
        print(n, "não pertence à sequência de Fibonacci")
while True:
    numero = int(input("Digite um número para verificar se pertence à sequência de Fibonacci (ou digite 0 para sair): "))
    if numero == 0:
        break
    fibonacci(numero)
